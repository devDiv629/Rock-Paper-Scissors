#:kivy 2.0.0

<MainMenu>:
    Widget:
        opacity: 0.8
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'atlas://Images/myatlas/bg'

    Widget:
        Button:
            size: dp(40), dp(40)
            background_color: 0, 0, 0, 0
            pos: root.width - self.width - dp(10), root.height - self.height - dp(10)
            on_release: root.toggle_music()
            Image:
                id: audio_switch_btn
                source: 'atlas://Images/myatlas/audio_on'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center
    Widget:
        Image:
            source: 'atlas://Images/myatlas/title'
            size: root.width, root.height / 2.5
            pos: 0, root.height - self.height

        Button:
            id: play_button
            text: 'Play'
            background_normal: ''
            font_name: 'Fonts/moonhouse.ttf'
            color: 4/255, 66/255, 33/255
            font_size: dp(30)
            background_color: 92/255, 147/255, 237/255, 0.8
            size: root.width * .7, root.height * 0.08
            pos: root.center_x - self.width / 2, root.center_y - self.height / 2
            on_press: root.click_sound.play()
            on_release: root.add_screens()

        Button:
            id: rules_button
            text: 'Rules'
            background_normal: ''
            font_name: 'Fonts/moonhouse.ttf'
            color: 4/255, 66/255, 33/255
            font_size: dp(30)
            background_color: 92/255, 147/255, 237/255, 0.8
            size: root.width * .7, root.height * 0.08
            pos: root.center_x - self.width / 2, play_button.pos[1] - self.height - dp(15)
            on_press: root.click_sound.play()
            on_release: root.switch_to_rules()

        Button:
            id: credits_button
            text: 'Credits'
            background_normal: ''
            font_name: 'Fonts/moonhouse.ttf'
            color: 4/255, 66/255, 33/255
            font_size: dp(30)
            background_color: 92/255, 147/255, 237/255, 0.8
            size: root.width * .7, root.height * 0.08
            pos: root.center_x - self.width / 2, rules_button.pos[1] - self.height - dp(15)
            on_press: root.click_sound.play()
            on_release: root.switch_to_credits()

        Button:
            text: 'Quit'
            background_normal: ''
            font_name: 'Fonts/moonhouse.ttf'
            font_size: dp(30)
            color: 1, 0, 0
            background_color: 92/255, 147/255, 237/255, 0.8
            size: root.width * .7, root.height * 0.08
            pos: root.center_x - self.width / 2, credits_button.pos[1] - self.height - dp(15)
            on_release: root.quit_game()
            on_press: root.click_sound.play()


<EnterName>:
    Widget:
        opacity: 0.8
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'atlas://Images/myatlas/bg'

    Widget:
        Button:
            size: dp(40), dp(40)
            background_color: 0, 0, 0, 0
            pos: dp(10), root.height - self.height - dp(10)
            on_press:
                root.click_sound.play()
                self.opacity = 0.5
            on_touch_up: self.opacity = 1
            on_release: root.manager.current = 'Main Menu'
            Image:
                source: 'atlas://Images/myatlas/back_button'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center

        Image:
            id: robot
            source: 'atlas://Images/myatlas/ask_name'
            allow_stretch: True
            size: root.width, root.height / 3.5
            pos: root.center_x - self.width / 2, your_name.pos[1] + your_name.height + dp(30)

        Label:
            id: your_name
            text: "Your name"
            font_name: 'Fonts/polygon_party.ttf'
            color: 0, 1, 0
            font_size: dp(25)
            size: self.texture_size
            center_x: root.center_x
            center_y: username.pos[1] + username.height + self.height
            on_size: self.center_x = root.center_x

        TextInput:
            id: username
            background_normal: ''
            background_color: 175/255, 219/255, 191/255, 0.7
            foreground_color: 245/255, 215/255, 227/255
            cursor_color: 1, 1, 0
            hint_text: "Player's name"
            size: root.width * .8, dp(40)
            font_name: 'Fonts/galiver_sans.ttf'
            font_size: dp(20)
            halign: 'center'
            pos: root.center_x - self.width / 2, root.center_y
            multiline: False
            on_text: root.validate_username()

        Button:
            id: start_button
            text: 'START'
            font_name: 'Fonts/moonhouse.ttf'
            font_size: dp(25)
            color: 4/255, 66/255, 33/255
            background_normal: ''
            background_color: 92/255, 147/255, 237/255, 0.8
            size: root.width * 0.6, dp(40)
            pos: root.center_x - self.width / 2, root.center_y - self.height - dp(30)
            on_release:
                root.begin_sound.play()
                root.manager.current = 'Blank Screen'
                root.begin_game()

<MainGame>:
    message: message
    round_on_screen: round_number
    user_name: user_name
    user_points: user_points
    user_choice_text: user_choice_text
    computer_points: computer_points
    computer_choice_text: computer_choice_text
    select_rock: select_rock
    select_paper: select_paper
    select_scissor: select_scissor
    play_again_button: play_again

    Widget:
        id: background_image
        opacity: 0.8
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'atlas://Images/myatlas/bg'

        Button:
            background_color: 0, 0, 0, 0
            size: root.width, root.height
            on_press: root.reset_cheats()

    Widget:
        Button:
            id: switch_to_home
            size: dp(40), dp(40)
            background_color: 0, 0, 0, 0
            pos: dp(10), root.height - self.height - dp(10)
            on_press:
                if self.opacity != 0.4: root.click_sound.play()
                if self.opacity != 0.4: self.opacity = 0.5
            on_touch_up: if self.opacity != 0.4: self.opacity = 1
            on_release: root.show_exit_prompt()
            Image:
                source: 'atlas://Images/myatlas/exit'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center

        Button:
            id: pause_game
            size: dp(40), dp(40)
            background_color: 0, 0, 0, 0
            pos: root.width - self.width - dp(10), root.height - self.height - dp(13)
            on_press: if self.opacity != 0.4: self.opacity = 0.5
            on_touch_up: if self.opacity != 0.4: self.opacity = 1
            on_release: root.pause_game()
            Image:
                source: 'atlas://Images/myatlas/pause'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center

    Widget:
        id: game_actions
        Label:
            id: round_number
            text: 'ROUND 1'
            font_name: 'Fonts/evil_empire.ttf'
            color: 1, 1, 0
            opacity: 0
            size: self.texture_size
            font_size: dp(35)
            center_x: root.center_x
            center_y: root.top - self.height * 2
            on_size: self.center_x = root.center_x

        Label:
            id: user_name
            size: self.texture_size
            center_x: root.width / 4
            center_y: round_number.pos[1] - dp(self.height)
            on_size: self.center_x = root.width / 4
            color: 115/255, 247/255, 214/255
            font_size: dp(22)
            font_name: "Fonts/buggie.ttf"

        Label:
            id: user_points
            text: "0"
            size: self.texture_size
            center_x: root.width / 4
            center_y: user_name.pos[1] - self.height
            on_size: self.center_x = root.width / 4
            color: 239/255, 196/255, 59/255
            font_size: dp(25)
            font_name: "Fonts/buggie.ttf"

        Label:
            id: user_choice_text
            size: self.texture_size
            on_size: self.center_x = root.width / 4
            center_x: root.width / 4
            center_y: user_points.pos[1] - self.height
            color: 203/255, 158/255, 249/255
            font_size: dp(22)
            font_name: "Fonts/gratison.otf"

        Label:
            id: computer_name
            text: "Computer"
            size: self.texture_size
            center_x: root.width * 3 / 4
            center_y: round_number.pos[1] - dp(self.height)
            on_size: self.center_x = root.width * 3 / 4
            color: 115/255, 247/255, 214/255
            font_size: dp(22)
            font_name: "Fonts/buggie.ttf"

        Label:
            id: computer_points
            text: "0"
            size: self.texture_size
            center_x: root.width * 3 / 4
            center_y: computer_name.pos[1] - self.height
            on_size: self.center_x = root.width * 3 / 4
            color: 239/255, 196/255, 59/255
            font_size: dp(25)
            font_name: "Fonts/buggie.ttf"

        Label:
            id: computer_choice_text
            size: self.texture_size
            center_x: root.width * 3 / 4
            center_y: computer_points.pos[1] - self.height
            on_size: self.center_x = root.width * 3 / 4
            color: 203/255, 158/255, 249/255
            font_size: dp(22)
            font_name: "Fonts/gratison.otf"

        Button:
            id: select_rock
            background_color: 0, 0, 0, 0
            size: dp(60), dp(60)
            center: root.center
            disabled: True
            opacity: 0.7
            on_press: if root.game_playable == True: self.opacity = 0.5
            on_touch_up: if self.opacity == 0.5: self.opacity = 1
            on_release:
                if root.game_playable == True: root.rock_clicked_sound.play()
                if root.game_playable == True: root.toggle_buttons_state()
                if root.game_playable == True: root.compare_choices(1)
            Image:
                source: 'atlas://Images/myatlas/rock'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center

        Button:
            id: select_paper
            background_color: 0, 0, 0, 0
            size: dp(60), dp(60)
            center_x: root.width / 4
            center_y: select_rock.pos[1] - self.height
            disabled: True
            opacity: 0.7
            on_press: if root.game_playable == True: self.opacity = 0.5
            on_touch_up: if self.opacity == 0.5: self.opacity = 1
            on_release:
                if root.game_playable == True: root.paper_clicked_sound.play()
                if root.game_playable == True: root.toggle_buttons_state()
                if root.game_playable == True: root.compare_choices(2)
            Image:
                source: 'atlas://Images/myatlas/paper'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center

        Button:
            id: select_scissor
            background_color: 0, 0, 0, 0
            size: dp(60), dp(60)
            center_x: root.width * 3 / 4
            center_y: select_rock.pos[1] - self.height
            disabled: True
            opacity: 0.7
            on_press: if root.game_playable == True: self.opacity = 0.5
            on_touch_up: if self.opacity == 0.5: self.opacity = 1
            on_release:
                if root.game_playable == True: root.scissor_clicked_sound.play()
                if root.game_playable == True: root.toggle_buttons_state()
                if root.game_playable == True: root.compare_choices(3)
            Image:
                source: 'atlas://Images/myatlas/scissor'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center

        Label:
            id: message
            text: "Game starting..."
            font_size: dp(22)
            font_name: "Fonts/cano.ttf"
            center_x: root.center_x
            center_y: select_paper.pos[1] - dp(self.height) / 2

        Button:
            id: play_again
            text: "Play again"
            disabled: True
            size: root.width * 0.9, dp(40)
            center_x: root.center_x
            center_y: message.pos[1]
            on_size: self.center_x = root.center_x
            background_normal: ''
            font_name: 'Fonts/moonhouse.ttf'
            color: 4/255, 66/255, 33/255
            font_size: dp(30)
            background_color: 92/255, 147/255, 237/255
            opacity: 0
            on_release: if root.game_playable: root.play_again()

<ExitPrompt>:
    Widget:
        id: exit_prompt_background
        canvas:
            Color:
                rgba: 1, 1, 1, 0.8
            Rectangle:
                pos: self.center_x - (root.width * 0.8) / 2, self.center_y - (root.height / 4) / 2
                size: root.width * 0.8, root.height / 4

        Label:
            text: 'Return to Main Menu'
            color: 222/255, 47/255, 99/255
            font_name: 'Fonts/polygon_party.ttf'
            font_size: root.width * 0.06
            center_x: exit_prompt_background.center_x
            center_y: no.pos[1] + no.height * 1.7

        Button:
            id: no
            text: 'NO'
            size: root.width / 4, root.height / 12
            center_x: exit_prompt_background.center_x - self.width * 0.8
            center_y: exit_prompt_background.center_y - self.height / 2
            background_normal: ''
            background_color: 92/255, 147/255, 237/255, 0.8
            color: 4/255, 66/255, 33/255
            font_name: 'Fonts/moonhouse.ttf'
            on_press: root.click_sound.play()
            on_release: root.remove_prompt()

        Button:
            text: 'YES'
            size: root.width / 4, root.height / 12
            center_x: exit_prompt_background.center_x + self.width * 0.8
            center_y: exit_prompt_background.center_y - self.height / 2
            background_normal: ''
            background_color: 92/255, 147/255, 237/255, 0.8
            color: 4/255, 66/255, 33/255
            font_name: 'Fonts/moonhouse.ttf'
            on_press: root.click_sound.play()
            on_release: root.go_to_main_menu()

<PauseScreen>:
    top_button: top_button
    bottom_button: bottom_button

    Widget:
        Label:
            text: 'PAUSED'
            center_x: root.center_x
            center_y: root.height - dp(self.height)
            font_name: 'Fonts/moonhouse.ttf'
            font_size: dp(25)

        Button:
            text: 'Resume'
            size: root.width * 0.8, dp(40)
            center: root.center
            on_size: self.center = root.center
            background_normal: ''
            background_color: 92/255, 147/255, 237/255, 0.8
            color: 4/255, 66/255, 33/255
            font_name: 'Fonts/moonhouse.ttf'
            font_size: dp(30)
            on_release: root.resume_game()

        Button:
            id: top_button
            size: root.width, dp(40)
            pos: 0, root.height - self.height
            opacity: 0
            disabled: True
            on_release: root.show_cheats()

        Button:
            id: bottom_button
            size: root.width, dp(40)
            opacity: 0
            on_release: root.enable_top_button()

<CheatsScreen>:
    always_win_button: always_win
    always_lose_button: always_lose
    Widget:
        Button:
            size: dp(40), dp(40)
            background_color: 0, 0, 0, 0
            pos: dp(10), root.height - self.height - dp(10)
            on_press: self.opacity = 0.5
            on_touch_up: self.opacity = 1
            on_release: root.manager.current = 'Pause Screen'
            Image:
                source: 'atlas://Images/myatlas/back_button'
                allow_stretch: True
                size: self.parent.size
                center: self.parent.center

        Label:
            id: cheats
            text: 'Cheats'
            color: 1, 0, 0
            center_x: root.center_x
            center_y: root.height - dp(self.height)
            font_name: 'Fonts/moonhouse.ttf'
            font_size: dp(25)

        ToggleButton:
            id: always_win
            group: 'activated_cheat'
            text: 'Always Win'
            font_name: 'Fonts/moonhouse.ttf'
            color: 4/255, 66/255, 33/255
            font_size: dp(20)
            size: root.width * 0.8, dp(40)
            center_x: root.center_x
            center_y: root.center_y + self.height
            on_size: self.center_x = root.center_x
            on_press: root.toggle_cheats()

        ToggleButton:
            id: always_lose
            group: 'activated_cheat'
            text: 'Always Lose'
            font_name: 'Fonts/moonhouse.ttf'
            color: 4/255, 66/255, 33/255
            font_size: dp(20)
            size: root.width * 0.8, dp(40)
            center_x: root.center_x
            center_y: root.center_y - self.height
            on_size: self.center_x = root.center_x
            on_press: root.toggle_cheats()

        Label:
            text: "When it's your turn, triple tap anywhere to reset the cheats"
            color: 1, 1, 0
            text_size: root.width * 0.9, None
            font_name: 'Fonts/cano.ttf'
            center_x: root.center_x
            center_y: dp(self.height)
            halign: 'center'

<SpecialLabel@Label>:
    size_hint_y: None
    text_size: root.width, None
    halign: 'center'
    height: self.texture_size[1]
    padding: 10, 10
    markup: True

<Rules@StackLayout>:
    SpecialLabel:
        text: "PLAYERS"
        color: 0, 1, 0
        font_size: dp(18)
        font_name: 'Fonts/polygon_party.ttf'

    SpecialLabel:
        text: "Rock-Paper-Scissors is played between two or more players. But in this virtual game, there will be only two players - First one is [color=f2aa9b]YOU[/color] and second one is [color=f2aa9b]COMPUTER[/color]."
        font_name: "Fonts/cano.ttf"

    SpecialLabel:
        text: "GAME"
        color: 0, 1, 0
        font_size: dp(18)
        font_name: 'Fonts/polygon_party.ttf'

    SpecialLabel:
        text: "As given in the title of the game, players have to choose one of the three choices - [color=f2aa9b]ROCK[/color] or [color=f2aa9b]PAPER[/color] or [color=f2aa9b]SCISSOR[/color]. There would be six rounds in the game. The first turn would be yours, and then that of the computer. Don't worry, computer's choice would be random. The choices of both the players would be checked and winner would be decided on these conditions:"
        font_name: "Fonts/cano.ttf"

    SpecialLabel:
        text: "> [color=f2aa9b]ROCK[/color] beats [color=f2aa9b]SCISSOR[/color]\n> [color=f2aa9b]SCISSOR[/color] beats [color=f2aa9b]PAPER[/color]\n> [color=f2aa9b]PAPER[/color] beats [color=f2aa9b]ROCK[/color]"
        font_name: "Fonts/cano.ttf"
        halign: "left"

    SpecialLabel:
        text: "So, if you choose [color=f2aa9b]PAPER[/color] and the computer chooses [color=f2aa9b]ROCK[/color], then you will win the round. In contrast, if you choose [color=f2aa9b]ROCK[/color] and the computer chooses [color=f2aa9b]PAPER[/color], then you will lose the round. If the choices of both the players are the same, then it would be a [color=f2aa9b]TIE[/color]. The player who wins the round would get one point. If a tie occurs, no one would get a point and the round would be played again.\nAfter final round, the player who has more points would win the game. If both players score the same points, a [color=f2aa9b]TIEBREAKER[/color] round will be played. The player who would win this round will be the winner of the game."
        font_name: "Fonts/cano.ttf"

    SpecialLabel:
        text: "SECRET"
        color: 0, 1, 0
        font_size: dp(18)
        font_name: 'Fonts/polygon_party.ttf'

    SpecialLabel:
        text: "You cannot cheat with your friends in Rock-Paper-Scissors when you play it face-to-face, but in this virtual game, you can. Something is hidden on the [color=f2aa9b]Pause[/color] screen!!"
        font_name: "Fonts/cano.ttf"

