        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'atlas://Images/myatlas/bg_2'

        Button:
            size: dp(40), dp(40)
            background_color: 0, 0, 0, 0
            pos: dp(10), root.height - self.height - dp(10)
            on_press:
                root.click_sound.play()
                self.opacity = 0.5
            on_touch_up: self.opacity = 1
            on_release: root.manager.current = 'Main Menu'
            Image:
                source: 'atlas://Images/myatlas/back_button'
